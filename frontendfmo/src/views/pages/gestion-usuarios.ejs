<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head') %>
    <title>Gesti√≥n de Usuarios</title>
</head>

<body>
    <div class="wrapper">
        <%- include('../partials/sidebar') %>
        <div id="content" class="w-100 bg-light p-4">
        
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="m-0 fw-bold">üë• Gesti√≥n de Usuarios del Sistema</h4>
                <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalCrearUsuario">
                    ‚ûï Nuevo Usuario
                </button>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-dark text-center">
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre de Usuario (Username)</th>
                                    <th>Tipo / Rol</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="tablaUsuarios" class="text-center">
                                <tr>
                                    <td colspan="4">Cargando usuarios...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="modal fade" id="modalCrearUsuario" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title fw-bold">Registrar Nuevo Usuario</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="formUsuario">
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Username:</label>
                            <input type="text" class="form-control" id="inputUsername" placeholder="Ej: jpererez" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Contrase√±a:</label>
                            <input type="password" class="form-control" id="inputClave" placeholder="******" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Tipo de Usuario:</label>
                            <select class="form-select" id="selectTipo">
                                <option value="SOPORTE">SOPORTE</option>
                                <option value="ADMIN">ADMINISTRADOR</option>
                            </select>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-success" onclick="guardarUsuario()">Guardar Usuario</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/bootstrap/bootstrap.bundle.min.js"></script>

    <script>
        // URL Base de tu API Java (Ajusta el puerto si es necesario)
        const API_URL = 'http://127.0.0.1:8081/api/usuarios';

        // Al cargar la p√°gina
        document.addEventListener('DOMContentLoaded', () => {
            listarUsuarios();
        });

        // --- 1. LISTAR USUARIOS (GET) ---
        async function listarUsuarios() {
            const tbody = document.getElementById('tablaUsuarios');
            try {
                const res = await fetch(API_URL);
                if(!res.ok) throw new Error("Error al obtener usuarios");
                const usuarios = await res.json();

                tbody.innerHTML = '';
                
                if(usuarios.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="4" class="text-muted">No hay usuarios registrados.</td></tr>';
                    return;
                }

                usuarios.forEach(u => {
                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                        <td class="fw-bold text-secondary">#${u.id}</td>
                        <td class="fw-bold text-primary">${u.username}</td>
                        <td><span class="badge bg-info text-dark">${u.tipo}</span></td>
                        <td>
                            <button class="btn btn-sm btn-danger" onclick="eliminarUsuario(${u.id}, '${u.username}')">
                                üóëÔ∏è Eliminar
                            </button>
                        </td>
                    `;
                    tbody.appendChild(tr);
                });

            } catch (error) {
                console.error(error);
                tbody.innerHTML = `<tr><td colspan="4" class="text-danger">Error de conexi√≥n con el servidor.</td></tr>`;
            }
        }

        // --- 2. CREAR USUARIO (POST) ---
        async function guardarUsuario() {
            const username = document.getElementById('inputUsername').value;
            const clave = document.getElementById('inputClave').value;
            const tipo = document.getElementById('selectTipo').value;

            if(!username || !clave) return alert("Por favor complete todos los campos.");

            const nuevoUsuario = {
                username: username,
                clave: clave, // Nota: El backend deber√≠a encriptar esto
                tipo: tipo
            };

            try {
                const res = await fetch(API_URL, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(nuevoUsuario)
                });

                if(res.ok) {
                    alert("Usuario creado exitosamente");
                    document.getElementById('formUsuario').reset(); // Limpiar form
                    // Cerrar modal
                    const modalEl = document.getElementById('modalCrearUsuario');
                    const modal = bootstrap.Modal.getInstance(modalEl);
                    modal.hide();
                    
                    listarUsuarios(); // Recargar tabla
                } else {
                    alert("Error al crear usuario. Verifique si el username ya existe.");
                }
            } catch (error) {
                console.error(error);
                alert("Error de conexi√≥n");
            }
        }

        // --- 3. ELIMINAR USUARIO (DELETE) ---
        async function eliminarUsuario(id, nombre) {
            if(!confirm(`¬øEst√° seguro de eliminar al usuario ${nombre}?`)) return;

            try {
                const res = await fetch(`${API_URL}/${id}`, {
                    method: 'DELETE'
                });

                if(res.ok) {
                    listarUsuarios(); // Recargar tabla
                } else {
                    alert("No se pudo eliminar el usuario.");
                }
            } catch (error) {
                console.error(error);
                alert("Error al intentar eliminar.");
            }
        }
    </script>
</body>
</html>