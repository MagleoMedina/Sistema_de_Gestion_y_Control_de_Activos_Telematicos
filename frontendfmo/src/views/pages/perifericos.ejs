                    </div>
                    <div class="row row-compact">
                        <div class="col-12 cell-border">
                            <span class="label-text me-2">N.¬∫ SOLICITUD S.T.:</span>
                            <input type="text" class="input-line" id="solicitudST">
                        </div>
                    </div>
                    <div class="row row-compact">
                        <div class="col-12 cell-border">
                            <span class="label-text me-2">N.¬∫ SOLICITUD DAET:</span>
                            <input type="text" class="input-line" id="solicitudDaet"> 
                        </div>
                    </div>

                    <div class="row row-compact">
                        <div class="col-12 cell-border" style="height: 45px;">
                            <span class="label-text">ENTREGADO POR:</span>
                            <input type="text" class="input-line mt-2" id="entregadoPor">
                        </div>
                    </div>
                    <div class="row row-compact">
                        <div class="col-12 cell-border" style="height: 45px;">
                            <span class="label-text">RECIBIDO POR:</span>
                            <input type="text" class="input-line mt-2" id="recibidoPor">
                        </div>
                    </div>

                </div>
                <br>
            </div>
        </div>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>

   <script>
    // Establecer fecha actual al cargar
    document.addEventListener('DOMContentLoaded', () => {
        const fechaInput = document.getElementById('fecha');
        if(fechaInput) fechaInput.valueAsDate = new Date();
    });

    async function guardarPerifericos() {
        console.log("Bot√≥n presionado: Iniciando recolecci√≥n de datos...");

        try {
            // 1. MAPA DE PERIF√âRICOS (Checkboxes)
            const mapPerifericosIds = {
                'Monitor': 1, 'Teclado': 2, 'Mouse': 3, 'Regulador': 4,
                'Impresora': 5, 'Scaner': 6, 'Pendrive': 7, 'Toner': 8
            };

            // 2. RECOLECTAR PERIF√âRICOS
            const listaPerifericos = [];
            document.querySelectorAll('.peri-check:checked').forEach(chk => {
                const idBd = mapPerifericosIds[chk.value];
                if (idBd) listaPerifericos.push({ id: idBd });
            });

            // 3. RECOLECTAR COMPONENTE INTERNO (Nueva L√≥gica Dropdown)
            // Obtenemos el valor del select (ej: "3", "4"...)
            const idComponenteSeleccionado = document.getElementById('selectComponentes').value;
            const serialGeneral = document.getElementById('fmoSerial').value;
            
            let listaComponentes = null;

            // Si el usuario seleccion√≥ algo (value no est√° vac√≠o)
            if (idComponenteSeleccionado) {
                listaComponentes = [{
                    idComponente: parseInt(idComponenteSeleccionado),
                    // Opcional: Si el backend pide serial para el componente, usamos el general
                    fmoSerial: serialGeneral || "S/N" 
                }];
            }

            // Helper para obtener valores seguros
            const getVal = (id) => document.getElementById(id)?.value || "";

            // 4. CONSTRUIR EL PAYLOAD
            const payload = {
                usuario: getVal('usuario'),
                ficha: parseInt(getVal('ficha')) || 0,
                nombre: getVal('usuario'), 
                gerencia: getVal('gerencia'),

                fmoEquipo: getVal('fmoAsignado') || "S/N",
                solicitudST: getVal('solicitudST'), 
                solicitudDAET: getVal('solicitudDaet'),

                entregadoPor: getVal('entregadoPor'),
                recibidoPor: getVal('recibidoPor'),
                asignadoA: getVal('asignadoA'),

                estatus: "Entregado", 
                fecha: getVal('fecha'),
                
                falla: getVal('falla'),
                otro: getVal('otrosTxt'),
                fmoSerial: serialGeneral, // Serial general del recibo

                // ARRAYS
                // Aqu√≠ enviamos la lista creada desde el Dropdown
                componentePerifericos: listaComponentes, 
                perifericos: listaPerifericos.length > 0 ? listaPerifericos : null
            };

            console.log("Payload generado:", payload);

            // VALIDACI√ìN: Debe haber al menos (Perif√©rico O Componente O Texto 'Otros')
            const tienePeriferico = payload.perifericos && payload.perifericos.length > 0;
            const tieneComponente = payload.componentePerifericos && payload.componentePerifericos.length > 0;
            const tieneOtro = !!payload.otro;

            if (!tienePeriferico && !tieneComponente && !tieneOtro) {
                alert("‚ö†Ô∏è Atenci√≥n: Debes seleccionar un Perif√©rico, un Componente o escribir en 'Otros'.");
                return; 
            }

            // 5. ENV√çO AL BACKEND
            const response = await fetch('http://127.0.0.1:8081/api/crearReciboPerifericos', { 
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify(payload)
            });

            if(response.ok) {
                const data = await response.json();
                alert("‚úÖ ¬°Recibo Guardado Exitosamente!");
                // window.location.reload();
            } else {
                const errorText = await response.text();
                console.error("Error servidor:", errorText);
                alert("‚ùå Error del servidor: " + errorText);
            }

        } catch (e) {
            console.error("Error cr√≠tico en JS:", e);
            alert("‚ùå Ocurri√≥ un error en la aplicaci√≥n: " + e.message);
        }
    }
</script>
</body>
</html>