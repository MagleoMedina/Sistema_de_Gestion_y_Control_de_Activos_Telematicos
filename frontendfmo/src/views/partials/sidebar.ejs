<style>
    /* --- PALETA FMO (Definición Local para el Sidebar) --- */
    :root {
        --sidebar-bg: #212529;
        --sidebar-width: 260px;
        --sidebar-collapsed-width: 70px;
        --fmo-red: #d6291c;
        --fmo-orange: #fa812f;
        --fmo-gradient: linear-gradient(135deg, #dd0303 0%, #fa812f 100%);
    }

    /* --- 1. LAYOUT GLOBAL --- */
    .wrapper {
        display: flex;
        width: 100%;
        height: 100vh;
        overflow: hidden;
    }

    /* --- 2. SIDEBAR --- */
    #sidebar {
        min-width: var(--sidebar-width);
        max-width: var(--sidebar-width);
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        flex-shrink: 0;
        z-index: 1000;
        overflow-x: hidden;
        white-space: nowrap;
        background-color: var(--sidebar-bg) !important;
        position: relative;
        border-right: 1px solid rgba(255,255,255,0.05);
    }

    .no-transition { transition: none !important; }

    /* Estado Colapsado */
    #sidebar.collapsed {
        min-width: var(--sidebar-collapsed-width);
        max-width: var(--sidebar-collapsed-width);
    }

    /* Ocultar textos y flechas */
    #sidebar.collapsed .link-text,
    #sidebar.collapsed .dropdown-toggle::after,
    #sidebar.collapsed .sidebar-title span {
        opacity: 0;
        pointer-events: none;
        display: none;
    }

    /* --- ESTILOS DE NAVEGACIÓN FMO --- */
    
    /* Contenedor de iconos */
    .icon-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-width: 30px;
        width: 30px;
        margin-right: 0.5rem;
        font-size: 1.2rem;
        color: var(--fmo-orange); /* Color de icono por defecto */
        transition: color 0.3s;
    }

    /* Link Base */
    .nav-pills .nav-link {
        color: #e0e0e0;
        margin-bottom: 4px;
        transition: all 0.2s ease;
        border-radius: 8px; /* Bordes más suaves */
    }

    /* Link Hover (Efecto suave rojo) */
    .nav-pills .nav-link:hover {
        background-color: rgba(214, 41, 28, 0.15); /* Rojo transparente */
        color: white;
        transform: translateX(3px);
    }
    .nav-pills .nav-link:hover .icon-container {
        color: #fff;
    }

    /* --- ESTADO ACTIVO (Gradiante FMO) --- */
    .nav-pills .nav-link.active {
        background: var(--fmo-gradient) !important;
        color: white !important;
        box-shadow: 0 4px 15px rgba(221, 3, 3, 0.4); /* Sombra roja */
    }
    .nav-pills .nav-link.active .icon-container {
        color: white !important;
    }

    /* --- HEADER DEL SIDEBAR --- */
    .sidebar-title i {
        color: var(--fmo-red); /* Icono herramienta en rojo */
    }
    
    .toggle-btn {
        background: none; border: none; color: white;
        font-size: 1.5rem; cursor: pointer; padding: 0 10px;
        transition: transform 0.3s; line-height: 1;
    }
    .toggle-btn:hover { color: var(--fmo-orange); }

    /* --- AJUSTES DE COLAPSADO --- */
    #sidebar.collapsed .nav-link, 
    #sidebar.collapsed .dropdown-toggle {
        justify-content: center !important; 
        padding-left: 0;
        padding-right: 0;
    }
    #sidebar.collapsed .icon-container { margin-right: 0 !important; }
    #sidebar.collapsed .collapse { display: none !important; }

    /* Dropdown Flotante */
    #sidebar.collapsed .dropdown-menu {
        position: fixed !important;
        left: 75px !important;
        bottom: 20px !important;
        top: auto !important;
        width: auto !important;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255,255,255,0.1);
        background: #2c3034;
    }

    /* --- OTROS --- */
    .admin-only { display: none !important; }
    
    #content {
        flex-grow: 1;
        width: auto !important;
        overflow-y: auto;
        height: 100vh;
        transition: all 0.3s ease;
    }

    .submenu-link {
        padding-left: 3rem !important;
        font-size: 0.9em;
        background-color: rgba(0, 0, 0, 0.3);
        border-left: 3px solid transparent;
    }
    .submenu-link.active {
        background-color: rgba(214, 41, 28, 0.2) !important;
        border-left-color: var(--fmo-orange) !important;
        background-image: none !important; /* Quitar degradado completo en submenús */
        box-shadow: none !important;
    }

    .bi { vertical-align: text-bottom; }
</style>

